{
  "version": 2,
  "name": "beer-expiry-alert-system",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/check-expiry",
      "dest": "/api/check-expiry.js"
    },
    {
      "src": "/api/expiring-beers",
      "dest": "/api/expiring-beers.js"
    }
  ],
  "crons": [
    {
      "path": "/api/check-expiry",
      "schedule": "*/10 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
